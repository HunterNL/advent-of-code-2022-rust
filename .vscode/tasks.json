{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "clippy",
			"args": [
				"--",
				"-W",
				"clippy::pedantic",
				"-W",
				"clippy::nursery",
				"-W",
				"clippy::unwrap_used",
				"-A",
				"clippy::missing-const-for-fn",
				"-A",
				"clippy::unnecessary_wraps",
				"-A",
				"clippy::cast_sign_loss"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo clippy"
		}
	]
}